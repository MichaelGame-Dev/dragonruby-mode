# Example 5: Sprite Preview Demo
# concepts: args.outputs.sprites, args.state

def tick args
  # Sprite Preview Demo
  # Las rutas de sprites mostrarÃ¡n un thumbnail y dimensiones
  
  # Inicializar estadoq
  args.state.player ||= {
    x: 640,
    y: 360,
    w: 64,
    h: 64,
    path: 'sprites/square/blue.png'  # Se mostrarÃ¡ thumbnail [64x64]
  }
  
  # Sprite bÃ¡sico
  args.outputs.sprites << args.state.player
  
  # Sprite con color tint
  enemy = {
    x: 800,
    y: 360,
    w: 64,
    h: 64,
    path: 'sprites/square/red.png',  # Thumbnail visible
    r: 255,
    g: 0,
    b: 0  # Color preview tambiÃ©n visible
  }
  args.outputs.sprites << enemy
  
  # Sprite con rotaciÃ³n
  coin = {
    x: 500,
    y: 360,
    w: 32,
    h: 32,
    path: 'sprites/circle/gold.png',  # Thumbnail [32x32]
    angle: args.state.tick_count
  }
  args.outputs.sprites << coin
  
  # Sprite con flip
  character = {
    x: 400,
    y: 360,
    w: 48,
    h: 48,
    path: 'sprites/misc/dragon-0.png',  # Thumbnail visible
    flip_horizontally: true
  }
  args.outputs.sprites << character
  
  # Array de sprites (paleta de colores)
  colors = [
    { x: 100, y: 100, w: 50, h: 50, path: 'sprites/square/red.png' },
    { x: 160, y: 100, w: 50, h: 50, path: 'sprites/square/green.png' },
    { x: 220, y: 100, w: 50, h: 50, path: 'sprites/square/blue.png' },
    { x: 280, y: 100, w: 50, h: 50, path: 'sprites/square/orange.png' }
  ]
  args.outputs.sprites << colors
end
